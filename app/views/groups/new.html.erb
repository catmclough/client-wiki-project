<h1>Create a new group!</h1>

  <%= form_for :group,  url: { action: "create" }, html: { class: "form-horizontal center form-container" } do |f| %>
  <div class="form-group">
      <%= f.label :name, "Name:", class: "col-md-4 control-label" %>
     <div class="col-md-4">
          <%= f.text_field :name, class: "form-control" %>
      </div>
  </div>

  <div class="form-actions">
    <%= f.submit "Create Group", class: "btn btn-default btn-primary col-md-4" %>
  </div>

<% end %>
